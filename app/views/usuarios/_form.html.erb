<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2> Erro ao salvar registro! Favor verificar. </h2>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nome" %><br>
    <%= f.text_field :nome %>
    <%= error_tag @usuario, :nome %>
  </div>
  <div class="field">
    <%= f.label "E-mail" %><br>
    <%= f.text_field :email %>
    <%= error_tag @usuario, :email %>
  </div>
  <div class="field">
    <%= f.label "Senha" %><br>
    <%= f.password_field :password %>
    <%= error_tag @usuario, :password %>
  </div>
  <div class="field">
    <%= f.label "Confirme a senha" %><br>
    <%= f.password_field :password_confirmation %>
    <%= error_tag @usuario, :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
