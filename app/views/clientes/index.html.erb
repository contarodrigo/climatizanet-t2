<%= render 'search' %>

<h1> 
  <% if @search_query.present? %>
    Resultados da busca
  <% else  %>
    Clientes
  <% end %>
</h1>

<% @clientes.each do |cliente| %>
  <article class="cliente">
    <p>
      <h2><%= link_to highlight(cliente.nome || '', @search_query), cliente , id: "titleArt",  class: "titleArt" %></h2>
        <p class="created">
          <%= highlight(cliente.email || '', @search_query) %>
        </p>
        <p class="created">
          <%= highlight(cliente.telefone || '', @search_query)%>
        </p>
        <p class="created">
          <%= highlight(cliente.celular || '', @search_query) %>
        </p>
        <p class="created">
          <%= highlight(cliente.cpf || '', @search_query) %>
        </p>
    </p>
        <t><%= link_to 'Mostrar', cliente , class: "action_button" %></t>
        <t><%= link_to 'Editar', edit_cliente_path(cliente) , class: "action_button" %></t>
        <t><%= link_to 'Excluir', cliente, method: :delete, data: { confirm: 'VocÃª realmente deseja excluir?' }, class: "action_button" %></t>
  </article>
<% end %>

<%= paginate @clientes %>

<%= link_to 'Novo', new_cliente_path ,  id: "newButton",  class: "newButton"%>
